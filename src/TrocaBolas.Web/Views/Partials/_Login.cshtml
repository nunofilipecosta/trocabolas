@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginUmbracoForm("PostLogoutForm", "RegisterSurface", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                Olá Nuno ( ir para a página de profile )
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/registo/" class="registerLink">Registo</a></li>
        <li><a href="/login/" class="loginLink">Login</a></li>
    </ul>
}